#!/bin/bash

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
DIR=$(realpath "${DIR}/..")

echo ${DIR}

ARCH_DEB=$(dpkg --print-architecture)

LIB_ARCH_FOLDER="unknown"
if [ "${ARCH_DEB}" == 'amd64' ]; then
    LIB_ARCH_FOLDER="x86_64-linux-gnu"
fi
if [ "${ARCH_DEB}" == 'armhf' ]; then
    LIB_ARCH_FOLDER="arm-linux-gnueabihf"
fi

export LD_LIBRARY_PATH=${DIR}/libusb/lib/${LIB_ARCH_FOLDER}

${DIR}/usbutils/usr/bin/lsusb